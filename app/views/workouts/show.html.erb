<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @workout.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @workout.description %>
</p>

<p>
<strong>Price:</strong>
<%= @workout.formatted_price %>
</p>

<h3>Reviews</h3>
<% @workout.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    Added on: <%= review.created_at %>
  </p>
<% end %>

  <h3>New Review</h3>
<%= render 'reviews/form' %>

